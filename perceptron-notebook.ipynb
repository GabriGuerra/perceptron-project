# perceptron-notebook.ipynb

import numpy as np
from sklearn.datasets import load_iris
import matplotlib.pyplot as plt
import seaborn as sns

from perceptron import executar

# Logical Gates dataset
X_logicas = np.array([[0,0],[0,1],[1,0],[1,1]])
portas = {
    "OR": np.array([0,1,1,1]),
    "AND": np.array([0,0,0,1]),
    "XOR": np.array([0,1,1,0])
}

for nome, y in portas.items():
    executar(X_logicas, y, f"Logical Gate {nome}")

# Iris dataset
iris = load_iris()
X_iris = iris.data
y_iris = np.where(iris.target == 0, 0, 1)  # Setosa vs others

# Train with all features
executar(X_iris, y_iris, "Iris (4 features)")

# Plot 2D visualization (Sepal Length and Petal Length)
X_iris_2d = X_iris[:, [0, 2]]

def plot_dados_2d(X, y, titulo, labels=['Class 0', 'Class 1']):
    plt.figure(figsize=(6,4))
    for classe in np.unique(y):
        plt.scatter(X[y==classe, 0], X[y==classe, 1], label=labels[classe])
    plt.title(titulo)
    plt.xlabel("Sepal Length")
    plt.ylabel("Petal Length")
    plt.legend()
    plt.show()

plot_dados_2d(X_iris_2d, y_iris, "Iris 2D - Setosa vs others")
executar(X_iris_2d, y_iris, "Iris (2 features)")
